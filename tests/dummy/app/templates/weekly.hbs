<div class="calendar-container">
  <section class="sidebar">
    <h2 id="title">Weekly Calendar</h2>
    <p>Today's Date: {{date}}</p>
  </section>

  {{#el-weekly-calendar date=date events=events as |days|}}
      <div class="calendar">
        <div class="row">
          <div class="cell title">
          </div>
          {{#each days as |day|}}
            <div class="cell title">
              {{day.dayName}}
              {{day.formattedDate}}
            </div>
          {{/each}}
        </div>
      <div class="week">
        <div class="week-hours">
          {{#each days.firstObject.hours as |hour|}}
            <div class="week-hour">{{hour.formattedHour}}</div>
          {{/each}}
        </div>
        {{#each days as |day|}}
          <div class="week-day">
            <div class="event-column">
              {{#each day.events as |event|}}
                {{weekly-event event=event hour=hour}}
              {{/each}}
            </div>
            {{#each day.hours as |hour|}}
              <div class="day-hour">
              </div>
            {{/each}}
          </div>
        {{/each}}
      </div>
    </div>
  {{/el-weekly-calendar}}
</div>
