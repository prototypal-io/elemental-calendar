{{#el-monthly-calendar date=model.date events=model.events as |weeks|}}
  <div class="row">
    <div class="cell title">
      Sunday
    </div>
    <div class="cell title">
      Monday
    </div>
    <div class="cell title">
      Tuesday
    </div>
    <div class="cell title">
      Wednesday
    </div>
    <div class="cell title">
      Thursday
    </div>
    <div class="cell title">
      Friday
    </div>
    <div class="cell title">
      Saturday
    </div>
  </div>
  {{#each weeks as |week|}}
    <div class="week">
      {{#each week.days as |day|}}
        <div class="day">
          {{#link-to "daily" day.formattedDate}}
            {{formatted-date day.date type="monthly-day"}}
          {{/link-to}}

          {{#if day.events}}
            <div class="events">
              {{#each day.events as |event|}}
                <div class="event">
                  {{event.name}}
                </div>
              {{/each}}
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/each}}
{{/el-monthly-calendar}}
