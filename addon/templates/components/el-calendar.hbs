{{#if monthly}}
  <p>Today's Date: {{date}}</p>
  <table>
    <tr>
      <th>Sunday</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
    </tr>
    {{#each weeks as |week|}}
      <tr>
        {{#each week.days as |day|}}
          <td>
            {{day.dayName}}
            {{day.date}}
            {{#if day.events}}
              <strong>Events:</strong>
              {{#each day.events as |event|}}
                {{event.name}}
              {{/each}}
            {{/if}}
          </td>
        {{/each}}
      </tr>
    {{/each}}
  </table>
{{/if}}

